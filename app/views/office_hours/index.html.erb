<h2>All Office Hours</h2>

<table class="table table-striped col-md-12" id="office_hours">
  <thead>
    <tr>
      <th>Host</th>
      <th>Class Name</th>
      <th>When</th>
      <th>More Info</th>
    </tr>
  </thead>
  <div class="row">
    <div class="" style="background-color: #d6d8db;padding: .25em; border-radius: 5px; width: 100%">
    <%= form_tag office_hours_path, method: :get, id: 'search_form' do %>
      Search for TA or OH:
        <%= text_field :search, :search, value: params[:search].nil? ? "" : params[:search][:search], :class => 'col-form-control', :required => true %>
    <%= submit_tag 'Search', id: 'search_submit', class: 'btn btn-primary' %>
    <%= link_to "Clear search", office_hours_path, :class => 'btn btn-primary' %>
    <% end %>
    </div>
  </div>
  <tbody>
    <% @ohs.each do |oh| %>
      <tr>
        <td><%= oh.host %></td>
        <td><%= oh.class_name %></td>
        <td><%= oh.time %></td>
        <td>
          <%= link_to "See more", office_hour_path(oh) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if user_signed_in? %>
<%= link_to 'Add new OH', new_office_hour_path, :class => 'btn btn-primary' %>
<% end %>
