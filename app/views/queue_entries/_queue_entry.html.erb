<div id="qe-<%= queue_entry.id %>"class="card border-info queue_entry" start_time="<%= queue_entry.created_at.strftime("%Y-%m-%dT%H:%M:%S+00:00") %>">
  <div class="card-header bg-dark" style="color: white">
    <span><%= queue_entry.student %></span>
    <span style="display: inline-block; float: right">
      <button id="thread-btn-<%= queue_entry.id %>" class="thread-btn btn btn-info" style=" padding: 5px 10px; margin: -5px 5px -5px -5px;">
        Thread<%= (Chat.where(queue_entry_id: queue_entry.id).length > 0) ? " (+#{Chat.where(queue_entry_id: queue_entry.id).length})" : "" %>
      </button>
      <% if ((user_signed_in? and current_user == @oh.user) or (queue_entry.creator_id.eql? session.id.to_s)) %>
        <button class="qe-btn btn btn-danger" style="padding: 5px 10px; margin: -5px;">X</button>
      <% end %>
    </span>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"></li>
    <li class="list-group-item"><%= queue_entry.description %></li>
  </ul>
</div>
